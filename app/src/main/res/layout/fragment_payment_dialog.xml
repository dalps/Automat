<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentDialogFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/productPageAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/product_actionbar_menu"
            app:navigationIcon="@drawable/ic_baseline_close_24"
            style="@style/Widget.MaterialComponents.Toolbar.Surface">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/productPageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riepilogo ordine"
                    android:textSize="20sp"
                    android:textFontWeight="800"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/medium_margin"
            android:paddingBottom="@dimen/medium_margin">

            <TextView
                android:id="@+id/itemsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/small_margin"
                android:text="Articoli"
                android:textSize="20dp"
                android:textFontWeight="700" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemsTitle"
                android:clipToPadding="false"
                tools:context=".PaymentDialogFragment"
                tools:listitem="@layout/fragment_payment_dialog_cart_item" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/small_margin"
                android:layout_below="@id/list"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_alignBaseline="@id/paymentTotal"
                android:text="Totale:"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/paymentTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_alignParentEnd="true"
                android:text="9.99"
                android:textSize="32sp"
                android:textFontWeight="700"/>

            <TextView
                android:id="@+id/paymentMethodsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total"
                android:text="Metodo di pagamento"
                android:textSize="20dp"
                android:textFontWeight="700"
                android:layout_marginTop="@dimen/big_margin"
                android:layout_marginBottom="@dimen/small_margin"/>

            <LinearLayout
                android:id="@+id/paymentMethods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/paymentMethodsTitle"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/medium_margin"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/google_pay_mark_800"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Google Pay"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:src="@drawable/ic_baseline_navigate_next_24"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/payButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/paymentMethods"
                android:text="Paga"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </RelativeLayout>

    </ScrollView>

</LinearLayout>